// 消去されていない場合を考慮して実行前に空にしておく
$("#alert-message").empty()

<% if @status == 'success' %>
  $("#<%= post_id(@post) %>").remove();
  $("#modal-container").modal("hide");
  $("#alert-message")
  .append("<%= j(render('shared/flash_success',message: "下書きの削除に成功しました。" )) %>");
<% elsif @status == 'failure'  %>
  alert("下書きの削除に失敗しました。");
<% end %>

// 約5秒後に消去する
setTimeout(() => {
  $("#alert-message").empty()
}, 5000);
