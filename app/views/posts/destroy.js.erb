// 実行前に空にしておく
$("#alert-message").empty()

<% if @error_messages.blank? %>
  $("#<%= post_id(@post) %>").remove();
  $("#modal-container").modal("hide");
  <% if @from == 'draft' %>
    $("#alert-message").append("<%= j(render('shared/flash_success', message: '下書きの削除に成功しました。' )) %>");
  <% elsif @from == 'scheduled' %>
    $("#alert-message").append("<%= j(render('shared/flash_success', message: '予約投稿の削除に成功しました。' )) %>");
  <% end %>

<% else  %>
  alert("下書きの削除に失敗しました。");
<% end %>
