<% if post.images.attached? %>
  <% post.images.each do |img| %>
    <div id=<%= image_id(img) %> class="image-deletable-container" >
      <%= image_tag(img.variant(resize_to_fit: [100, 100]), class: 'card-img-bottom mb-3') %>
      <%= link_to "", posts_image_path(img, post_id: post.id), method: :delete, remote: true, class: "fa-solid fa-xmark"%>
    </div>
  <% end %>
<% end %>