// 消去されていない場合を考慮して実行前に空にしておく
$("#alert-message").empty()

<% if @status == 'success' %>
  $("#<%= post_id(@draft) %>").replaceWith("<%= j(render('draft', draft: @draft)) %>");
  $("#modal-container").modal("hide");
  $("#alert-message")
  .append("<%= j(render('shared/flash_success',message: "下書きの保存に成功しました。" )) %>");
<% elsif @status == 'failure'  %>
  alert(`投稿の更新に失敗しました。
  ・過去の投稿と全く同じ投稿は出来ません。
  ・規定の文字数を超えた投稿は出来ません。`);
<% end %>

// 約5秒後に消去する
setTimeout(() => {
  $("#alert-message").empty()
}, 5000);

