<div class="col" id=<%= draft_id(draft) %>>
  <div class="card">
    <div class="card-body">
      <p class="card-text">
        <%= draft.content %>
      </p>
      <div class="d-grid gap-2 d-md-flex justify-content-md-end">
        <%= link_to "編集", edit_draft_path(draft), class: "button button-submit icon edit", remote: true %>
        <%# draftから削除 → publishedへ移動する %>
        <%= link_to "投稿", draft_path(draft), method: :delete, remote: true, data: { confirm: "投稿してもよろしいですか?" }, class: "button button-submit icon upload"%>
      </div>
    </div>
    <div class="card-footer text-muted">
      最終更新: <%= l(draft.updated_at, format: :long) %>
    </div>
  </div>
</div>

