// 消去されていない場合を考慮して実行前に空にしておく
$("#alert-message").empty()

<% if @status == 'success' %>
  $("#<%= post_id(@draft) %>").remove();
  $("#alert-message").append("<%= j(render('shared/flash_success',message: "#{@action}に成功しました。" )) %>");
<% elsif @status == 'failure' %>
  $("#alert-message").append("<%= j(render('shared/flash_danger',message: "#{@action}に失敗しました。\n・過去の投稿と全く同じ投稿は出来ません。\n・規定の文字数を超えた投稿は出来ません。" )) %>");
<% end %>

// 約5秒後に消去する
setTimeout(() => {
  $("#alert-message").empty()
}, 5000);
